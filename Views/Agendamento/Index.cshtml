    <script>
        $(document).ready(function () {
            // Função para atualizar o contador de registros visíveis
            function atualizarContador() {
                const visibleRows = $('#TbAgendamentos tbody tr:visible').length; // Conta as linhas visíveis
                $('#registroCount').text(visibleRows); // Atualiza o contador
            }

            // Filtro na tabela
            $('#filtro').on('keyup', function () {
                const value = $(this).val().toLowerCase(); // Valor do campo de filtro

                // Filtra as linhas da tabela
                $('#TbAgendamentos tbody tr').each(function () {
                    const rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.includes(value)); // Mostra ou oculta a linha
                });

                atualizarContador(); // Atualiza o contador
            });

            // Inicializa o contador de registros
            atualizarContador();
        });

        // Preencher modal de edição
        function definirEdt(id, NomeCliente, Telefone, DataAtendimento, Horario, ServicoNome, ServicoValor) {
            $('#IdEdt').val(id);
            $('#EditNomeCliente').val(NomeCliente);
            $('#EditTel').val(Telefone);
            $('#EditDataAtendimento').val(DataAtendimento);
            $('#EditHorario').val(Horario);
            $('#EditServicoNome').val(ServicoNome);
            $('#EditServicoValor').val(ServicoValor);
        }

        // Preencher modal de exclusão
        function definirExc(id, NomeCliente, Telefone) {
            $('#IdExc').val(id);
            $('#ExcNomeCliente').text(NomeCliente);
            $('#ExcTel').text(Telefone);
        }

        // Inserir Agendamento
        function InserirAgendamento() {
            const nomeCliente = $('#NomeCliente').val();
            const telefone = $('#Telefone').val();
            const dataAtendimento = $('#DataAtendimento').val();
            const horario = $('#Horario').val();
            const servicoNome = $('#ServicoNome').val();
            const servicoValor = $('#ServicoValor').val();

            // Validações simples
            if (!nomeCliente.trim() || !telefone.trim() || !dataAtendimento || !horario || !servicoNome || !servicoValor) {
                alert("Por favor, preencha todos os campos obrigatórios.");
                return;
            }

            const dados = {
                NomeCliente: nomeCliente,
                Telefone: telefone,
                DataAtendimento: dataAtendimento,
                Horario: horario,
                ServicoNome: servicoNome,
                ServicoValor: servicoValor
            };

            $.ajax({
                url: '/Agendamento/InserirAgendamento',
                type: "POST",
                dataType: "json",
                data: dados,
                success: function (resultado) {
                    alert(resultado.message);
                    if (resultado.success) {
                        $('#InserirAgendamento').modal('hide');
                        location.reload();
                    }
                },
                error: function () {
                    alert("Erro ao inserir agendamento.");
                }
            });
        }

        // Alterar Agendamento
        function AlterarAgendamento() {
            const dados = {
                Id: $("#IdEdt").val(),
                NomeCliente: $("#EditNomeCliente").val(),
                Telefone: $("#EditTel").val(),
                DataAtendimento: $("#EditDataAtendimento").val(),
                Horario: $("#EditHorario").val(),
                ServicoNome: $("#EditServicoNome").val(),
                ServicoValor: $("#EditServicoValor").val()
            };

            if (!dados.NomeCliente || !dados.Telefone || !dados.DataAtendimento || !dados.Horario || !dados.ServicoNome || !dados.ServicoValor) {
                alert("Todos os campos são obrigatórios.");
                return;
            }

            $.ajax({
                type: "POST",
                url: "/Agendamento/AlterarAgendamento",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(dados),
                success: function (response) {
                    alert(response.success ? "Agendamento alterado com sucesso!" : "Falha ao alterar agendamento.");
                    if (response.success) {
                        $('#FormEditar').modal('hide');
                        location.reload();
                    }
                },
                error: function () {
                    alert("Erro ao alterar agendamento.");
                }
            });
        }

        // Excluir Agendamento
        function ExcluirAgendamento() {
            const agendamentoId = $('#IdExc').val();

            $.ajax({
                type: "POST",
                url: "/Agendamento/ExcluirAgendamento",
                data: { id: agendamentoId },
                dataType: "json",
                success: function (response) {
                    alert(response.success ? "Agendamento excluído com sucesso!" : "Erro ao excluir agendamento.");
                    if (response.success) {
                        $('#ExcluirAgendamento').modal('hide');
                        location.reload();
                    }
                },
                error: function () {
                    alert("Erro ao excluir agendamento.");
                }
            });
        }
    </script>

