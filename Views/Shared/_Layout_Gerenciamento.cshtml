<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/gerenciamento_index.css">
    <link rel="stylesheet" href="~/css/submenu.css">
    <link rel="stylesheet" href="~/css/loader.css">

    <link rel="icon" href="~/images/Portfolio/Arthur-logo-A.png" type="image/png"/>
</head>
<body>
    <!-------------------- Header Area (Start) -------------------->
    <header class="header">
        @{
            bool usuarioAutenticado = (Context.Session.GetInt32("USUARIO_ID") != null);
            string usuarioNome = Context.Session.GetString("USUARIO_NOME") ?? "Usuário não autenticado";
            string tipoUsuario = Context.Session.GetString("USUARIO_TIPO") ?? "Desconhecido";
        }

        <!-- Logo --> 
        <h1 class="section-title">
            <a href="/Home/Index"><img src="~/images/Portfolio/Arthur-logo-A.png" alt="About-Image" style="width: 100px; height: 100px; "></a>
        </h1>
        <!-- Logo End -->

        <!-- Navbar -->
        <nav class="navbar" style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap;">
            <span style="display: flex; align-items: center; margin-right: 9px;">
                <i class="fas fa-home fa-lg" aria-hidden="true" style="color: #ac0404;"></i>
                <a href="/Home/Index" style="margin-left: 10px;">Inicio</a>
            </span>

            @if (usuarioAutenticado)
            {
                @if (tipoUsuario == "1")
                {
                    <div class="dropdown">
                        <span style="display: flex; align-items: center; margin-right: 20px;">
                            <i class="fa fa-user" aria-hidden="true" style="color: #ac0404;"></i>
                            <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                            <i class="fa fa-chevron-down" aria-hidden="true" style="color: #ac0404; margin-left: 5px;"></i>
                        </span>
                        <div class="dropdown-content">
                            <a href="/Usuario/Index">
                                <i class="fa fa-users" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Usuarios
                            </a>
                            <a href="/Agendamento/Index">
                                <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Agendamento Admin
                            </a>                           
                          
                            <a href="/Servico/Index">
                                <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Serviços
                            </a>
                            <a href="/Relatorio/Index">
                                <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Relatório
                            </a>
                        </div>
                    </div>
                    
                }
                else {
                    <div class="dropdown">
                        <span style="display: flex; align-items: center; margin-right: 20px;">
                            <i class="fa fa-user" aria-hidden="true" style="color: #ac0404;"></i>
                            <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                            <i class="fa fa-chevron-down" aria-hidden="true" style="color: #ac0404; margin-left: 5px;"></i>
                        </span>
                        <div class="dropdown-content">
                            <a href="/Agendamento/Gerenciamento_Agendamento_Usuario">
                                <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Agendamento User
                            </a>
                            <a href="/Agendamento/Cadastro">
                                <i class="fa fa-file" aria-hidden="true" style="margin-right: 20px; color: #ac0404;"></i>
                                Cadastro Agendamento
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Menu de Login (Quando o usuário não está autenticado) -->
                <div class="dropdown" style="position: relative; display: inline-block;">
                    <span style="display: flex; align-items: center; margin-right: 20px;">
                        <i class="fa fa-user" aria-hidden="true" style="color: #ac0404;"></i>
                        <a href="/Usuario/Login" style="margin-left: 10px;">Login</a>
                    </span>
                </div>
            }

        </nav>

    </header>
    <!-------------------- Header Area (End) -------------------->

    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <!-------------------- Footer Area (Start) -------------------->

    <!-------------------- Footer Area (End) -------------------->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.pdfMake.min.js"></script>




    <script>
        function logout() {
            // Envia a requisição AJAX para o servidor
            $.ajax({
                url: '/Usuario/Logout', // URL do método Logout no controller
                type: 'POST', // Tipo de requisição (POST)
                success: function (response) {
                    // Se a requisição for bem-sucedida
                    if (response.success) {
                        // Redireciona para a página de login ou outra página conforme desejado
                        window.location.href = '/Home/Index';
                    } else {
                        // Se houver uma mensagem de erro, exibe
                        alert('Erro ao realizar o logout: ' + (response.message || 'Erro desconhecido'));
                    }
                },
                error: function (xhr, status, error) {
                    // Se ocorrer algum erro na requisição AJAX
                    alert('Erro ao processar a solicitação de logout. Detalhes: ' + error);
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
